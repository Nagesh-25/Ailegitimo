{
  "version": 2,
  "builds": [
    {
      "src": "app/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/analyze",
      "dest": "app/app.py",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/chat", 
      "dest": "app/app.py",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/health",
      "dest": "app/app.py", 
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico))",
      "dest": "public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ],
  "functions": {
    "app/app.py": {
      "maxDuration": 30
    }
  }
}
